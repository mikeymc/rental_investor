<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Global Stocks</h1>
    </div>
    <div class="panel-body">
      <div class="well well-sm">
        <table class="table-striped table-bordered">
          <th align="text-center"></th>
          <th align="text-center"><%= sortable "name" %></th>
          <th align="text-center">Symbol</th>
          <th align="text-center">Exchange</th>
          <th align="text-center"><%= sortable "currentEPS", "Current Estimated EPS" %></th>
          <th align="text-center"><%= sortable "dividends_per_share" %></th>
          <th align="text-center">Day High</th>
          <th align="text-center">Day Low</th>
          <th align="text-center">Book Value</th>
          <th align="text-center"><%= sortable "price_to_book_ratio" %></th>
          <% @stocks.each do |stock| %>
            <div>
              <tr class="row">
                <td><%= stock.name %></td>
                <td><%= stock.symbol %></td>
                <td><%= stock.index %></td>
                <td><%= stock.currentEPS %></td>
                <td><%= stock.dividends_per_share %></td>
                <td><%= stock.day_high_price %></td>
                <td><%= stock.day_low_price %></td>
                <td><%= stock.book_value %></td>
                <td><%= stock.price_to_book_ratio %></td>
              </tr>
            </div>
          <% end %>
        </table>
        <%= will_paginate @stocks %>
      </div>
    </div>
  </div>
</div>

